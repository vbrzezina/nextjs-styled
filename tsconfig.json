{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "noEmit": false,
        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./build/.next/server",
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    },
    "include": ["src/**/*", "./tsconfig.json"],
    "exclude": ["node_modules/", "./build/", ".idea/", ".vscode/", ".src/styles"]
}
